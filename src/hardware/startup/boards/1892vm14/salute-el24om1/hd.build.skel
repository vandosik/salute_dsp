	slogger -s64 &
	wdtkick -p50 -e &

	pipe
	xip_setup
	LD_LIBRARY_PATH=/proc/boot:/lib:/usr/lib:/lib/dll:/dev/shmem/xip
#ifdef VARIANT_ksz
	PATH=/proc/boot:/bin:/usr/bin:/sbin:/usr/sbin:/usr/ksz/bin:/dev/shmem/xip
#else
	PATH=/proc/boot:/bin:/usr/bin:/sbin:/usr/sbin:/dev/shmem/xip
#endif
