/etc/profile = {
export TZ=MSK-03
}

/etc/ftpusers = {
* allow
}
/etc/inetd.conf = {
ftp        stream tcp nowait root  /proc/boot/ftpd           in.ftpd -l
telnet     stream tcp nowait root  /proc/boot/telnetd        in.telnetd
}

/etc/services = ${QNX_TARGET}/etc/services

/etc/passwd = {
root:x:0:0:Superuser:/tmp:/bin/sh
}

/etc/shadow = {
